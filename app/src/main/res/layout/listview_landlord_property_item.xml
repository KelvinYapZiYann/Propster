<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/min_group_margin"
        >
<!--        android:background="@drawable/edittext_background_unfocused"-->
<!--        android:layout_marginBottom="@dimen/min_group_margin"-->

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/landlordManagePropertyListItemName"
                android:textColor="@color/black"
                android:text="property item name"
                android:textSize="@dimen/list_item_primary_font_size"
                android:layout_centerVertical="true"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    >

                    <RatingBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/landlordManagePropertyListItemTenantCount"
                        style="@style/property_tenant_user_icon"
                        android:layout_alignParentEnd="true"
                        android:isIndicator="true"
                        android:numStars="5"
                        />

<!--                    <TextView-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:id="@+id/landlordManagePropertyListItemTenantCount"-->
<!--                        android:text="tenant count"-->
<!--                        android:textColor="@color/black"-->
<!--                        android:textSize="@dimen/input_field_font_size"-->
<!--                        android:layout_alignParentEnd="true"-->
<!--                        />-->

<!--                    <TextView-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:text="tenant count = "-->
<!--                        android:textColor="@color/black"-->
<!--                        android:textSize="@dimen/input_field_font_size"-->
<!--                        android:layout_toStartOf="@id/landlordManagePropertyListItemTenantCount"-->
<!--                        />-->

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/landlordManagePropertyListItemPayment"
                        android:textColor="@color/black"
                        android:text="payment"
                        android:textSize="@dimen/list_item_secondary_small_font_size"
                        android:layout_toStartOf="@id/landlordManagePropertyListItemAgeLabel"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="payment = "
                        android:textColor="@color/black"
                        android:textSize="@dimen/list_item_secondary_small_font_size"
                        android:layout_toStartOf="@id/landlordManagePropertyListItemPayment"
                        android:layout_marginEnd="@dimen/list_item_text_gap"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/landlordManagePropertyListItemAgeLabel"
                        android:text="age = "
                        android:textColor="@color/black"
                        android:textSize="@dimen/list_item_secondary_small_font_size"
                        android:layout_toStartOf="@id/landlordManagePropertyListItemAge"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/landlordManagePropertyListItemAge"
                        android:textColor="@color/black"
                        android:text="age"
                        android:textSize="@dimen/list_item_secondary_small_font_size"
                        android:layout_alignParentEnd="true"
                        />


                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>