<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".allRoles.PropertyTenureContractsDetailActivity">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/propertyExpensesDetailToolbar"
        app:navigationIcon="?attr/homeAsUpIndicator"
        android:elevation="@dimen/toolbar_elevation"
        android:background="@color/white"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/min_group_margin"
        android:layout_marginEnd="@dimen/min_group_margin"
        android:layout_marginTop="@dimen/min_group_margin"
        android:layout_below="@id/propertyExpensesDetailToolbar"
        android:layout_above="@id/propertyExpensesDetailEditButton">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/propertyExpensesDetailDescriptionLabel"
                android:text="@string/property_expenses_payment_description_label"
                android:textColor="@color/black"
                android:textSize="@dimen/input_field_font_size"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/input_field_height"
                android:id="@+id/propertyExpensesDetailDescription"
                android:autofillHints=""
                android:hint="@string/property_expenses_payment_description"
                android:inputType="text"
                android:enabled="false"
                android:textAlignment="textStart"
                android:textSize="@dimen/input_field_font_size"
                android:textColor="@color/black"
                android:textColorHint="@color/disabled_grey"
                android:background="@drawable/edittext_background_state"
                android:layout_below="@id/propertyExpensesDetailDescriptionLabel"
                android:paddingStart="@dimen/input_field_gap_height"
                tools:ignore="RtlSymmetry"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/propertyExpensesDetailPropertyNameLabel"
                android:text="@string/property_expenses_property_name_label"
                android:textColor="@color/black"
                android:textSize="@dimen/input_field_font_size"
                android:layout_below="@id/propertyExpensesDetailDescription"
                android:layout_marginTop="@dimen/input_field_gap_height"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/input_field_height"
                android:id="@+id/propertyExpensesDetailPropertyName"
                android:autofillHints=""
                android:hint="@string/property_expenses_property_name"
                android:enabled="false"
                android:inputType="text"
                android:textAlignment="textStart"
                android:textSize="@dimen/input_field_font_size"
                android:textColor="@color/black"
                android:textColorHint="@color/disabled_grey"
                android:background="@drawable/edittext_background_state"
                android:layout_below="@id/propertyExpensesDetailPropertyNameLabel"
                android:paddingStart="@dimen/input_field_gap_height"
                tools:ignore="RtlSymmetry"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/propertyExpensesDetailTypeLabel"
                android:text="@string/property_expenses_expense_type_label"
                android:textColor="@color/black"
                android:textSize="@dimen/input_field_font_size"
                android:layout_below="@id/propertyExpensesDetailPropertyName"
                android:layout_marginTop="@dimen/input_field_gap_height"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/input_field_height"
                android:id="@+id/propertyExpensesDetailType"
                android:autofillHints=""
                android:inputType="text"
                android:hint="@string/property_expenses_expense_type"
                android:enabled="false"
                android:textAlignment="textStart"
                android:textSize="@dimen/input_field_font_size"
                android:textColor="@color/black"
                android:textColorHint="@color/disabled_grey"
                android:background="@drawable/edittext_background_state"
                android:layout_below="@id/propertyExpensesDetailTypeLabel"
                android:paddingStart="@dimen/input_field_gap_height"
                tools:ignore="RtlSymmetry"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/propertyExpensesDetailVendorLabel"
                android:text="@string/property_expenses_vendor_name_label"
                android:textColor="@color/black"
                android:textSize="@dimen/input_field_font_size"
                android:layout_below="@id/propertyExpensesDetailType"
                android:layout_marginTop="@dimen/input_field_gap_height"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/input_field_height"
                android:id="@+id/propertyExpensesDetailVendor"
                android:autofillHints=""
                android:hint="@string/property_expenses_vendor_name"
                android:inputType="text"
                android:enabled="false"
                android:textAlignment="textStart"
                android:textSize="@dimen/input_field_font_size"
                android:textColor="@color/black"
                android:textColorHint="@color/disabled_grey"
                android:background="@drawable/edittext_background_state"
                android:layout_below="@id/propertyExpensesDetailVendorLabel"
                android:paddingStart="@dimen/input_field_gap_height"
                tools:ignore="RtlSymmetry"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/propertyExpensesDetailAmountLabel"
                android:text="@string/property_expenses_amount_label"
                android:textColor="@color/black"
                android:textSize="@dimen/input_field_font_size"
                android:layout_below="@id/propertyExpensesDetailVendor"
                android:layout_marginTop="@dimen/input_field_gap_height"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/input_field_height"
                android:id="@+id/propertyExpensesDetailAmount"
                android:autofillHints=""
                android:hint="@string/property_expenses_amount"
                android:inputType="number"
                android:enabled="false"
                android:textAlignment="textStart"
                android:textSize="@dimen/input_field_font_size"
                android:textColor="@color/black"
                android:textColorHint="@color/disabled_grey"
                android:background="@drawable/edittext_background_state"
                android:layout_below="@id/propertyExpensesDetailAmountLabel"
                android:paddingStart="@dimen/input_field_gap_height"
                tools:ignore="RtlSymmetry"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/propertyExpensesDetailDateOfExpenseLabel"
                android:text="@string/property_expenses_date_of_expense_label"
                android:textColor="@color/black"
                android:textSize="@dimen/input_field_font_size"
                android:layout_below="@id/propertyExpensesDetailAmount"
                android:layout_marginTop="@dimen/input_field_gap_height"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/input_field_height"
                android:id="@+id/propertyExpensesDetailDateOfExpense"
                android:inputType="date"
                android:enabled="false"
                android:autofillHints=""
                android:textAlignment="textStart"
                android:textSize="@dimen/input_field_font_size"
                android:textColor="@color/black"
                android:textColorHint="@color/disabled_grey"
                android:background="@drawable/edittext_background_state"
                android:layout_below="@id/propertyExpensesDetailDateOfExpenseLabel"
                android:paddingStart="@dimen/input_field_gap_height"
                tools:ignore="RtlSymmetry"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/propertyExpensesDetailUploadedFileLabel"
                android:text="@string/property_expenses_uploaded_files_label"
                android:textColor="@color/black"
                android:textSize="@dimen/input_field_font_size"
                android:layout_below="@id/propertyExpensesDetailDateOfExpense"
                android:layout_marginTop="@dimen/input_field_gap_height"
                />

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="@dimen/user_profile_image_width"
                android:layout_height="@dimen/user_profile_image_height"
                android:src="@drawable/file_ic"
                android:id="@+id/propertyExpensesDetailUploadedFile"
                app:shapeAppearanceOverlay="@style/property_expenses_uploaded_file_image"
                app:srcCompat="@drawable/file_ic"
                app:strokeColor="@color/disabled_grey"
                app:strokeWidth="1dp"
                android:contentDescription="@string/app_name"
                android:scaleType="fitCenter"
                android:padding="@dimen/user_profile_image_padding"
                android:layout_below="@id/propertyExpensesDetailUploadedFileLabel"
                />

        </RelativeLayout>

    </ScrollView>

    <com.nambimobile.widgets.efab.ExpandableFabLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.nambimobile.widgets.efab.ExpandableFab
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            app:efab_orientation="portrait"
            android:layout_marginBottom="@dimen/min_group_margin"
            android:layout_marginEnd="@dimen/min_group_margin"
            app:efab_color="@color/primary_blue"
            app:efab_icon="@drawable/more_ic_white"
            app:efab_iconAnimationRotationDeg="-180"
            app:efab_closingAnticipateTension="0"
            app:efab_size="normal"
            />

        <com.nambimobile.widgets.efab.FabOption
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/propertyExpensesDetailRemoveExpenseButton"
            app:fab_color="@color/alert_red"
            app:fab_icon="@drawable/remove_ic_white"
            app:label_text="Remove Asset Expenses"
            app:label_backgroundColor="@color/alert_red"
            />

        <!--        <com.nambimobile.widgets.efab.FabOption-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:id="@+id/propertyExpensesDetailEditButton"-->
        <!--            app:fab_color="@color/primary_blue"-->
        <!--            app:fab_icon="@drawable/ic_edit_white"-->
        <!--            app:label_text="Edit"-->
        <!--            app:label_backgroundColor="@color/primary_blue"-->
        <!--            />-->

    </com.nambimobile.widgets.efab.ExpandableFabLayout>

    <android.widget.Button
        android:layout_width="@dimen/large_button_width"
        android:layout_height="wrap_content"
        android:id="@+id/propertyExpensesDetailEditButton"
        android:text="@string/edit"
        android:textColor="@color/white"
        android:textSize="@dimen/large_button_font_size"
        android:background="@drawable/primary_button_background_state"
        android:layout_centerHorizontal="true"
        android:paddingTop="@dimen/large_button_padding"
        android:paddingBottom="@dimen/large_button_padding"
        android:layout_marginTop="@dimen/min_group_margin"
        android:layout_marginBottom="@dimen/secondary_button_gap_height"
        android:layout_alignParentBottom="true"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/propertyExpensesDetailBackground"
        android:background="@color/background_black"
        android:visibility="gone"
        />

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/propertyExpensesDetailLoadingSpinner"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:indeterminate="true"
        android:indeterminateTint="@color/secondary_blue"
        android:visibility="gone"
        />

</RelativeLayout>