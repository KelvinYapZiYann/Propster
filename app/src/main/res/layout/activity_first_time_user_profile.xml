                    android:layout_toEndOf="@id/firstTimeUserProfilePhoneNumberLabel"
                    android:layout_below="@id/firstTimeUserProfileEmail"
                    android:layout_marginStart="@dimen/min_group_margin"
                    android:layout_marginTop="@dimen/input_field_gap_height"
                    />

