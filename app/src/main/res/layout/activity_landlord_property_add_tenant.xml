                android:id="@+id/landlordPropertyAddTenantDateOfBirthLabel"
                android:text="@string/date_of_birth_label"
                android:textColor="@color/black"
                android:textSize="@dimen/input_field_font_size"
                android:layout_below="@id/landlordPropertyAddTenantGender"
                android:layout_marginTop="@dimen/input_field_gap_height"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/input_field_gap_height"
                android:id="@+id/landlordPropertyAddTenantDateOfBirthAlert"
                android:text="@string/user_profile_error_date_of_birth_empty"
                android:textColor="@color/alert_red"
                android:textSize="@dimen/input_field_alert_font_size"
                android:visibility="invisible"
                android:layout_toEndOf="@id/landlordPropertyAddTenantDateOfBirthLabel"
                android:layout_below="@id/landlordPropertyAddTenantLastName"
                android:layout_marginStart="@dimen/min_group_margin"
                android:layout_marginTop="@dimen/input_field_gap_height"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/input_field_height"
                android:id="@+id/landlordPropertyAddTenantDateOfBirth"
                android:inputType="date"
                android:autofillHints=""
                android:textAlignment="textStart"
                android:textSize="@dimen/input_field_font_size"
                android:textColor="@color/black"
                android:textColorHint="@color/disabled_grey"
                android:background="@drawable/edittext_background_state"
                android:layout_below="@id/landlordPropertyAddTenantDateOfBirthLabel"
                android:paddingStart="@dimen/input_field_gap_height"
                tools:ignore="RtlSymmetry"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/landlordPropertyAddTenantIsBusinessLabel"
                android:text="@string/is_business_label"
                android:textColor="@color/black"
                android:textSize="@dimen/input_field_font_size"
                android:layout_below="@id/landlordPropertyAddTenantDateOfBirth"
                android:layout_marginTop="@dimen/input_field_gap_height"
                />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="@dimen/input_field_height"
                android:id="@+id/landlordPropertyAddTenantIsBusiness"
