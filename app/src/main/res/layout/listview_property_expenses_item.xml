<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/min_group_margin"
        >
        <!--        android:background="@drawable/edittext_background_unfocused"-->
        <!--        android:layout_marginBottom="@dimen/min_group_margin"-->

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/propertyExpensesListItemDescription"
                android:textColor="@color/black"
                android:text="description"
                android:textSize="@dimen/list_item_primary_font_size"
                android:layout_centerVertical="true"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/propertyExpensesListItemPropertyName"
                        android:textColor="@color/black"
                        android:text="name"
                        android:textSize="@dimen/list_item_secondary_large_font_size"
                        android:layout_alignParentEnd="true"
                        />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/propertyExpensesListItemDate"
                        android:textColor="@color/black"
                        android:text="date"
                        android:textSize="@dimen/list_item_secondary_small_font_size"
                        android:layout_toStartOf="@id/propertyExpensesListItemAmount"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/propertyExpensesListItemAmount"
                        android:textColor="@color/black"
                        android:text="rm1000"
                        android:textSize="@dimen/list_item_secondary_small_font_size"
                        android:layout_alignParentEnd="true"
                        />


                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>