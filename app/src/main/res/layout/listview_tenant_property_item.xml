<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/min_group_margin"
        >
        <!--        android:background="@drawable/edittext_background_unfocused"-->
        <!--        android:layout_marginBottom="@dimen/min_group_margin"-->

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tenantManagePropertyListItemName"
                android:textColor="@color/black"
                android:text="property item name"
                android:textSize="@dimen/list_item_primary_font_size"
                android:layout_centerVertical="true"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tenantManagePropertyListItemPayment"
                android:textColor="@color/black"
                android:text="payment"
                android:textSize="@dimen/list_item_secondary_small_font_size"
                android:layout_toStartOf="@id/tenantManagePropertyListItemAgeLabel"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="payment = "
                android:textColor="@color/black"
                android:textSize="@dimen/list_item_secondary_small_font_size"
                android:layout_toStartOf="@id/tenantManagePropertyListItemPayment"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tenantManagePropertyListItemAgeLabel"
                android:text="age = "
                android:textColor="@color/black"
                android:textSize="@dimen/list_item_secondary_small_font_size"
                android:layout_toStartOf="@id/tenantManagePropertyListItemAge"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tenantManagePropertyListItemAge"
                android:textColor="@color/black"
                android:text="age"
                android:textSize="@dimen/list_item_secondary_small_font_size"
                android:layout_alignParentEnd="true"
                />

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>