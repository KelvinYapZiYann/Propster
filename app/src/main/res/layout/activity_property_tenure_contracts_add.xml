<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tenureContracts.AddPropertyTenureContractsActivity">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/addTenureContractsToolbar"
        app:navigationIcon="?attr/homeAsUpIndicator"
        android:elevation="@dimen/toolbar_elevation"
        android:background="@color/white"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/min_group_margin"
        android:layout_marginEnd="@dimen/min_group_margin"
        android:layout_marginTop="@dimen/min_group_margin"
        android:layout_below="@id/addTenureContractsToolbar"
        android:layout_above="@id/addTenureContractsAddContractButton"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/addTenureContractsPropertyNameLabel"
                android:text="@string/tenure_contracts_property_name_label"
                android:textColor="@color/black"
                android:textSize="@dimen/input_field_font_size"
                />

<!--            <TextView-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="@dimen/input_field_gap_height"-->
<!--                android:id="@+id/addTenureContractsPropertyNameAlert"-->
<!--                android:text="@string/property_expenses_description_empty"-->
<!--                android:textColor="@color/alert_red"-->
<!--                android:textSize="@dimen/input_field_alert_font_size"-->
<!--                android:visibility="invisible"-->
<!--                android:layout_toEndOf="@id/addTenureContractsPropertyNameLabel"-->
<!--                android:layout_marginStart="@dimen/min_group_margin"-->
<!--                />-->

            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/input_field_height"
                android:id="@+id/addTenureContractsPropertyName"
                android:autofillHints=""
                android:hint="@string/tenure_contracts_property_name"
                android:inputType="text"
                android:enabled="false"
                android:textAlignment="textStart"
                android:textSize="@dimen/input_field_font_size"
                android:textColor="@color/black"
                android:textColorHint="@color/disabled_grey"
                android:background="@drawable/edittext_background_state"
                android:layout_below="@id/addTenureContractsPropertyNameLabel"
                android:paddingStart="@dimen/input_field_gap_height"
                tools:ignore="RtlSymmetry"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/addTenureContractsTenantNameLabel"
                android:text="@string/tenure_contracts_tenant_name_label"
                android:textColor="@color/black"
                android:textSize="@dimen/input_field_font_size"
                android:layout_below="@id/addTenureContractsPropertyName"
                android:layout_marginTop="@dimen/input_field_gap_height"
                />

<!--            <TextView-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="@dimen/input_field_gap_height"-->
<!--                android:id="@+id/addTenureContractsTenantNameAlert"-->
<!--                android:text="@string/tenure_contracts_name_empty"-->
<!--                android:textColor="@color/alert_red"-->
<!--                android:textSize="@dimen/input_field_alert_font_size"-->
<!--                android:visibility="invisible"-->
<!--                android:layout_below="@id/addTenureContractsPropertyName"-->
<!--                android:layout_toEndOf="@id/addTenureContractsTenantNameLabel"-->
<!--                android:layout_marginStart="@dimen/min_group_margin"-->
<!--                android:layout_marginTop="@dimen/input_field_gap_height"-->
<!--                />-->

            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/input_field_height"
                android:id="@+id/addTenureContractsTenantName"
                android:autofillHints=""
                android:hint="@string/tenure_contracts_tenant_name"
                android:enabled="false"
                android:inputType="text"
                android:textAlignment="textStart"
                android:textSize="@dimen/input_field_font_size"
                android:textColor="@color/black"
                android:textColorHint="@color/disabled_grey"
                android:background="@drawable/edittext_background_state"
                android:layout_below="@id/addTenureContractsTenantNameLabel"
                android:paddingStart="@dimen/input_field_gap_height"
                tools:ignore="RtlSymmetry"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/addTenureContractsNameLabel"
                android:text="@string/tenure_contracts_name_label"
                android:textColor="@color/black"
                android:textSize="@dimen/input_field_font_size"
                android:layout_below="@id/addTenureContractsTenantName"
                android:layout_marginTop="@dimen/input_field_gap_height"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/input_field_gap_height"
                android:id="@+id/addTenureContractsNameAlert"
                android:text="@string/tenure_contracts_name_empty"
                android:textColor="@color/alert_red"
                android:textSize="@dimen/input_field_alert_font_size"
                android:visibility="invisible"
                android:layout_below="@id/addTenureContractsTenantName"
                android:layout_toEndOf="@id/addTenureContractsNameLabel"
                android:layout_marginStart="@dimen/min_group_margin"
                android:layout_marginTop="@dimen/input_field_gap_height"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/input_field_height"
                android:id="@+id/addTenureContractsName"
                android:autofillHints=""
                android:hint="@string/tenure_contracts_name"
                android:inputType="text"
                android:textAlignment="textStart"
                android:textSize="@dimen/input_field_font_size"
                android:textColor="@color/black"
                android:textColorHint="@color/disabled_grey"
                android:background="@drawable/edittext_background_state"
                android:layout_below="@id/addTenureContractsNameLabel"
                android:paddingStart="@dimen/input_field_gap_height"
                tools:ignore="RtlSymmetry"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/addTenureContractsDescriptionLabel"
                android:text="@string/tenure_contracts_description_label"
                android:textColor="@color/black"
                android:textSize="@dimen/input_field_font_size"
                android:layout_below="@id/addTenureContractsName"
                android:layout_marginTop="@dimen/input_field_gap_height"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/input_field_gap_height"
                android:id="@+id/addTenureContractsDescriptionAlert"
                android:text="@string/tenure_contracts_description_empty"
                android:textColor="@color/alert_red"
                android:textSize="@dimen/input_field_alert_font_size"
                android:visibility="invisible"
                android:layout_below="@id/addTenureContractsName"
                android:layout_toEndOf="@id/addTenureContractsDescriptionLabel"
                android:layout_marginStart="@dimen/min_group_margin"
                android:layout_marginTop="@dimen/input_field_gap_height"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/input_field_height"
                android:id="@+id/addTenureContractsDescription"
                android:autofillHints=""
                android:hint="@string/tenure_contracts_description"
                android:inputType="text"
                android:textAlignment="textStart"
                android:textSize="@dimen/input_field_font_size"
                android:textColor="@color/black"
                android:textColorHint="@color/disabled_grey"
                android:background="@drawable/edittext_background_state"
                android:layout_below="@id/addTenureContractsDescriptionLabel"
                android:paddingStart="@dimen/input_field_gap_height"
                tools:ignore="RtlSymmetry"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/addTenureContractsMonthlyRentalAmountLabel"
                android:text="@string/tenure_contracts_monthly_rental_amount_label"
                android:textColor="@color/black"
                android:textSize="@dimen/input_field_font_size"
                android:layout_below="@id/addTenureContractsDescription"
                android:layout_marginTop="@dimen/input_field_gap_height"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/input_field_gap_height"
                android:id="@+id/addTenureContractsMonthlyRentalAmountAlert"
                android:text="@string/tenure_contracts_monthly_rental_amount_empty"
                android:textColor="@color/alert_red"
                android:textSize="@dimen/input_field_alert_font_size"
                android:visibility="invisible"
                android:layout_below="@id/addTenureContractsDescription"
                android:layout_toEndOf="@id/addTenureContractsMonthlyRentalAmountLabel"
                android:layout_marginStart="@dimen/min_group_margin"
                android:layout_marginTop="@dimen/input_field_gap_height"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/input_field_height"
                android:id="@+id/addTenureContractsMonthlyRentalAmount"
                android:autofillHints=""
                android:hint="@string/tenure_contracts_monthly_rental_amount"
                android:inputType="numberDecimal|numberSigned"
                android:textAlignment="textStart"
                android:textSize="@dimen/input_field_font_size"
                android:textColor="@color/black"
                android:textColorHint="@color/disabled_grey"
                android:background="@drawable/edittext_background_state"
                android:layout_below="@id/addTenureContractsMonthlyRentalAmountLabel"
                android:paddingStart="@dimen/input_field_gap_height"
                tools:ignore="RtlSymmetry"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/addTenureContractsTenureStartDateLabel"
                android:text="@string/tenure_contracts_tenure_start_date_label"
                android:textColor="@color/black"
                android:textSize="@dimen/input_field_font_size"
                android:layout_below="@id/addTenureContractsMonthlyRentalAmount"
                android:layout_marginTop="@dimen/input_field_gap_height"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/input_field_gap_height"
                android:id="@+id/addTenureContractsTenureStartDateAlert"
                android:text="@string/tenure_contracts_tenure_start_date_empty"
                android:textColor="@color/alert_red"
                android:textSize="@dimen/input_field_alert_font_size"
                android:visibility="invisible"
                android:layout_below="@id/addTenureContractsMonthlyRentalAmount"
                android:layout_toEndOf="@id/addTenureContractsTenureStartDateLabel"
                android:layout_marginStart="@dimen/min_group_margin"
                android:layout_marginTop="@dimen/input_field_gap_height"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/input_field_height"
                android:id="@+id/addTenureContractsTenureStartDate"
                android:inputType="date"
                android:autofillHints=""
                android:textAlignment="textStart"
                android:textSize="@dimen/input_field_font_size"
                android:textColor="@color/black"
                android:textColorHint="@color/disabled_grey"
                android:background="@drawable/edittext_background_state"
                android:layout_below="@id/addTenureContractsTenureStartDateLabel"
                android:paddingStart="@dimen/input_field_gap_height"
                tools:ignore="RtlSymmetry"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/addTenureContractsTenureEndDateLabel"
                android:text="@string/tenure_contracts_tenure_end_date_label"
                android:textColor="@color/black"
                android:textSize="@dimen/input_field_font_size"
                android:layout_below="@id/addTenureContractsTenureStartDate"
                android:layout_marginTop="@dimen/input_field_gap_height"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/input_field_gap_height"
                android:id="@+id/addTenureContractsTenureEndDateAlert"
                android:text="@string/tenure_contracts_tenure_end_date_empty"
                android:textColor="@color/alert_red"
                android:textSize="@dimen/input_field_alert_font_size"
                android:visibility="invisible"
                android:layout_below="@id/addTenureContractsTenureStartDate"
                android:layout_toEndOf="@id/addTenureContractsTenureEndDateLabel"
                android:layout_marginStart="@dimen/min_group_margin"
                android:layout_marginTop="@dimen/input_field_gap_height"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/input_field_height"
                android:id="@+id/addTenureContractsTenureEndDate"
                android:inputType="date"
                android:autofillHints=""
                android:textAlignment="textStart"
                android:textSize="@dimen/input_field_font_size"
                android:textColor="@color/black"
                android:textColorHint="@color/disabled_grey"
                android:background="@drawable/edittext_background_state"
                android:layout_below="@id/addTenureContractsTenureEndDateLabel"
                android:paddingStart="@dimen/input_field_gap_height"
                tools:ignore="RtlSymmetry"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/addTenureContractsUploadedFileLabel"
                android:text="@string/tenure_contracts_uploaded_files_label"
                android:textColor="@color/black"
                android:textSize="@dimen/input_field_font_size"
                android:layout_below="@id/addTenureContractsTenureEndDate"
                android:layout_marginTop="@dimen/input_field_gap_height"
                />

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="@dimen/user_profile_image_width"
                android:layout_height="@dimen/user_profile_image_height"
                android:src="@drawable/file_ic"
                android:id="@+id/addTenureContractsUploadedFile"
                app:shapeAppearanceOverlay="@style/uploaded_file_image"
                app:srcCompat="@drawable/file_ic"
                app:strokeColor="@color/disabled_grey"
                app:strokeWidth="1dp"
                android:contentDescription="@string/app_name"
                android:scaleType="fitCenter"
                android:padding="@dimen/user_profile_image_padding"
                android:layout_below="@id/addTenureContractsUploadedFileLabel"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/addTenureContractsUploadedFileName"
                android:text="@string/empty"
                android:textColor="@color/disabled_grey"
                android:textSize="@dimen/input_field_font_size"
                android:layout_below="@id/addTenureContractsUploadedFile"
                />

        </RelativeLayout>

    </ScrollView>

    <android.widget.Button
        android:layout_width="@dimen/large_button_width"
        android:layout_height="wrap_content"
        android:id="@+id/addTenureContractsAddContractButton"
        android:text="@string/add_property_tenure_contracts"
        android:textColor="@color/white"
        android:textSize="@dimen/large_button_font_size"
        android:background="@drawable/primary_button_background_state"
        android:layout_centerHorizontal="true"
        android:paddingTop="@dimen/large_button_padding"
        android:paddingBottom="@dimen/large_button_padding"
        android:layout_marginTop="@dimen/min_group_margin"
        android:layout_marginBottom="@dimen/secondary_button_gap_height"
        android:layout_alignParentBottom="true"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/addTenureContractsBackground"
        android:background="@color/background_black"
        android:visibility="gone"
        />

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addTenureContractsLoadingSpinner"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:indeterminate="true"
        android:indeterminateTint="@color/secondary_blue"
        android:visibility="gone"
        />

</RelativeLayout>